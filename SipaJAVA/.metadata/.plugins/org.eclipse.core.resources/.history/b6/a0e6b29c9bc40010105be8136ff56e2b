
import java.awt.BorderLayout;
import java.awt.FlowLayout;
import java.awt.Image;
import java.awt.Toolkit;

import javax.swing.Icon;
import javax.swing.ImageIcon;
import javax.swing.JButton;
import javax.swing.JFrame;

public class MyFrame extends JFrame{

	// Default Constructor
	public MyFrame(){
		
		setSize(400,300);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		Toolkit kit = Toolkit.getDefaultToolkit();
		Image img = kit.getImage("images/appGallery_skin.gif");
		setIconImage(img);
		// create components
		Image img2 = kit.getImage("images/icon_widget.pn");
		Icon icon = new ImageIcon(img2);	// set Icon before set images
		JButton b1 = new JButton("Click Me",icon); //set Images
		add(b1);
		//b1.setBounds(50,100,100,25);
		
		JButton b2 = new JButton("Click Me b2");
		add(b2);
		
		setLayout(new FlowLayout());
		
		//setLayout(null);
		setVisible(true);
	}	
	// Constructor
	public MyFrame(String name){
		this();
		this.setTitle(name);		
	}
	
	public static void main(String args[]){
		MyFrame f = new MyFrame("Hello JFrame");
	}
}

